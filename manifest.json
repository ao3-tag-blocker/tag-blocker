{
	"manifest_version": 2,

	"name": "AO3 Tag Blocker",
	"description": "Automatically blocks added tags.",
	"version": "1.0",
	"background": {
		"scripts": ["background.js","tagger.js"]
	},

	"permissions": ["tabs","storage","windows"],
	"icons": {
		"16": "icon1.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_action": {
		"default_icon": "icon1.png",
		"default_title": "AO3 Tag Blocker",
		"default_popup": "tagger.html"
	}
}